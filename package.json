{
  "name": "arcticfox-monitor",
  "version": "1.0.0",
  "private": true,
  "description": "A simple device monitoring tool for vape devices with Arcticfox firmware",
  "main": "main.js",
  "repository": "https://github.com/hobbyquaker/arcticfox-monitor",
  "keywords": [
    "vape",
    "ecigarette",
    "evolv",
    "arcticfox",
    "battery",
    "mod",
    "monitor",
    "nfeteam",
    "ntoolbox"
  ],
  "author": {
    "name": "daltesean",
    "email": "daltesean@gmail.com",
    "url": "https://github.com/daltesean"
  },
  "license": "GPLv3",
  "devDependencies": {
    "electron": "^1.7.6",
    "electron-builder": "^19.27.7",
    "electron-rebuild": "^1.6.0"
  },
  "dependencies": {
    "ajv-keywords": "^3.4.0",
    "arcticfox": "^11.0.2",
    "async": "^2.5.0",
    "electron-is-dev": "^0.3.0",
    "electron-json-storage": "^3.1.0",
    "electron-window-state": "^4.1.1",
    "highcharts": "^5.0.14",
    "jquery": "^3.2.1",
    "node-hid": "^0.7.7",
    "photonkit": "^0.1.2"
  },
  "scripts": {
    "rebuild": "./node_modules/.bin/electron-rebuild -f",
    "start": "electron .",
    "dist": "build"
  },
  "build": {
    "productName": "Arcticfox Monitor",
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz",
        "rpm"
      ]
    },
    "deb": {
      "afterInstall": "build/after-install.tpl"
    },
    "rpm": {
      "afterInstall": "build/after-install.tpl"
    }
  }
}
